\newcommand{\MakeBoite}[2]{\newenvironment{#1}[1]{\bgroup\setlength{\linewidth}{0.5\linewidth}
    % This is now the \SetAllTextColor macro...
  \setbeamercolor{normal text}{fg=black}
  \setbeamercolor{structure}{fg=black}
  \setbeamercolor{item}{fg=black}
  \setbeamercolor{itemize}{fg=black}
  \setbeamercolor{itemize item}{fg=black}
  \setbeamercolor{itemize item projected}{fg=black}
  \setbeamercolor{itemize subitem}{fg=black}
  \setbeamercolor{itemize subsubitem}{fg=black}
  \setbeamercolor{itemize/enumerate body}{fg=black}
  \setbeamercolor{itemize/enumerate subbody}{fg=black}
  \setbeamercolor{itemize/enumerate subbody}{fg=black}
  \setbeamercolor{itemize/enumerate subsubbody}{fg=black}
  \begin{beamerboxesrounded}[scheme=#2,shadow=false]{\usebeamercolor[fg]{normal text}##1}%
    \usebeamercolor[fg]{normal text}}
  {\end{beamerboxesrounded}\egroup}
}

